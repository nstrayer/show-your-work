{
  "name": "show-your-work",
  "displayName": "Show Your Work",
  "description": "Share planning context for AI-assisted PRs via GitHub Gists",
  "version": "0.0.1",
  "publisher": "nstrayer",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onCommand:showYourWork.installClaudeCommand",
    "onCommand:showYourWork.copyPrompt"
  ],
  "main": "./out/extension.js",
  "files": [
    "out",
    "media",
    "resources"
  ],
  "contributes": {
    "commands": [
      {
        "command": "showYourWork.installClaudeCommand",
        "title": "Show Your Work: Install Claude Command"
      },
      {
        "command": "showYourWork.copyPrompt",
        "title": "Show Your Work: Copy Prompt to Clipboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
